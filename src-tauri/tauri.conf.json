      "endpoints": [
        "https://admin.node101.io/api/wizard/{{target}}/{{arch}}/{{current_version}}"
      ]
    },
    "windows": [
      {
        "url": "app.html",
        "fullscreen": false,
        "height": 720,
        "resizable": true,
